<div class="container">
  <h1 class="text-center">Burgers!</h1>

  <h2>Not Eaten!</h2>

  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="eat" value="true">
            <button class="btn btn-primary" type="submit">EAT!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>

  <h2>Eaten!</h2>

  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="eat" value="false">
            <button type="submit">UNEAT!</button>
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ul>

  <form class="create-update-form" action="/" method="POST">
    <div class="form-group">
      <label for="name">Burger Name:</label>
      <input type="text" id="name" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>